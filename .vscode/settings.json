{
  "flake8.args": ["--ignore=E501"],
  "markdownlint.config": {
    "MD033": false
  },
  "python.analysis.typeCheckingMode": "basic",
  "editor.codeActionsOnSave": {
    "source.organizeImports": true
  },
  "black-formatter.args": ["--line-length=180"],
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
